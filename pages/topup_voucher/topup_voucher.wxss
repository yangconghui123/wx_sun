/* pages/topup_voucher/topup_voucher.wxss */
.upload_box {
  width: 90%;
  margin: 20rpx auto;
  background-color: #FFFFFF;
  /* height: 800rpx; */
  padding: 30rpx 0;
}

.upload_title {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #333333;
  padding: 32rpx 30rpx;
}

.upload_back {
  width: 645rpx;
  height: 347rpx;
  background: #ebe7e75e;
  border: 1px solid #eeeeee6e;
  margin: 0 auto;
  padding-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload_img {
  width: 100%;
  height: 100%;
}

.upload_icon {
  height: 60rpx;
  width: 60rpx;
}

.submitbt {
  width: 750rpx;
  height: 99rpx;
  background-color: #333333;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 99rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.r-input {
  font-size: 48rpx;
}

.recharge_title {
  font-size: 32rpx;
  color: #333;
  padding: 0rpx 30rpx 0 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;

}

.box_title {
  font-size: 32rpx;
  color: #AA947A;
  margin: 42rpx 40rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
}

.money_value {
  display: flex;
  align-items: center;
  font-size: 48rpx;
  margin: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
  height: 120rpx;
}

.recharge_content {
  font-size: 26rpx;
  color: #666;
  margin: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
}